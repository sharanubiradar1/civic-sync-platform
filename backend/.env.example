# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/civicsync
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/civicsync

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=CivicSync <noreply@civicsync.com>

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Backend URL (for image serving)
BACKEND_URL=http://localhost:5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=5242880
# 5MB in bytes (5 * 1024 * 1024)
UPLOAD_PATH=uploads/